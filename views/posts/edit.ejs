<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit your post</h1>

        <form action="/posts/<%= post._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="post[title]" value="<%= post.title %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="post[image]" value="<%= post.image %>">
            </div>
            <div class="form-group">
                <textarea name="post[content]" value="<%- post.content %>"></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-large btn-success btn-block">Submit</button>
            </div>
        </form>
        <a class="btn btn-md btn-danger" href="/posts">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>
